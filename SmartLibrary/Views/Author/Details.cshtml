@model SmartLibrary.Models.ViewModels.Author.AuthorViewModel

@{
    ViewBag.Title = "Chi Tiết Tác Giả";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Chi Tiết Tác Giả</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 d-flex flex-column align-items-center">
                    <label class="form-label fw-bold">Ảnh đại diện</label>
                    <img src="@Model.AvatarImage" alt="Ảnh đại diện" class="img-fluid rounded shadow" style="max-width: 200px; max-height: 200px;" />
                </div>
                <div class="col-md-8">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên Tác Giả</label>
                        <p>@Model.AuthorName</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Ngày Sinh</label>
                        <p>@Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tiểu Sử</label>
                        <p>@Model.Biography</p>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning"><i class="bi bi-pencil"></i> Chỉnh sửa</a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
