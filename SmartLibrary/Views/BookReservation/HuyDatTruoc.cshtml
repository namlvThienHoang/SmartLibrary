@model SmartLibrary.Models.ViewModels.Reservation.EditReservationViewModel

@{
    ViewBag.Title = "Hủy Đặt Trước Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0"><i class="fas fa-ban"></i> Hủy Đặt Trước Sách</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Cancel", "Reservation", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ReservationId)

                <div class="row">
                    <!-- Tên sách -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-book"></i> Tên sách</label>
                            <p class="form-control-plaintext">@Model.BookTitle</p>
                        </div>
                    </div>

                    <!-- Tên người dùng -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-user"></i> Người đặt</label>
                            <p class="form-control-plaintext">@Model.UserName</p>
                        </div>
                    </div>

                    <!-- Ngày đặt trước -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="fas fa-calendar-alt"></i> Ngày đặt trước</label>
                            <p class="form-control-plaintext">@Model.ReservationDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>

                    <!-- Ngày hủy -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            @Html.LabelFor(model => model.CancelDate, "Ngày hủy", new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(model => model.CancelDate, new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(model => model.CancelDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-ban"></i> Xác nhận hủy
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
