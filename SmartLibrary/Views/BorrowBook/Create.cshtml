@model SmartLibrary.Models.ViewModels.BorrowBook.CreateBorrowBookViewModel

@{
    ViewBag.Title = "Mượn Sách";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>BorrowTransaction</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.UserId)
        @Html.DropDownListFor(model => model.UserId, (SelectList)ViewBag.Users, "Chọn người dùng", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BookId)
        @Html.DropDownListFor(model => model.BookId, (SelectList)ViewBag.Books, "Chọn sách", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.BookId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BorrowDate)
        @Html.TextBoxFor(model => model.BorrowDate, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.BorrowDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DueDate)
        @Html.TextBoxFor(model => model.DueDate, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.DueDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Status)
        @Html.DropDownListFor(model => model.Status, (SelectList)ViewBag.Statuses, "Chọn trạng thái", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Status)
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
