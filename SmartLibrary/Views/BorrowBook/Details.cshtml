@model SmartLibrary.Models.ViewModels.BorrowBook.BorrowBookViewModel

@{
    ViewBag.Title = "Chi tiết mượn/trả sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0"><i class="fas fa-book-reader"></i> Chi Tiết Mượn/Trả Sách</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Sách -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-book"></i> Sách</label>
                        <p class="form-control-plaintext">@Model.BookTitle</p>
                    </div>
                </div>

                <!-- Người mượn -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-user"></i> Người mượn</label>
                        <p class="form-control-plaintext">@Model.UserName</p>
                    </div>
                </div>

                <!-- Ngày mượn -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-calendar-alt"></i> Ngày mượn</label>
                        <p class="form-control-plaintext">@Model.BorrowDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>

                <!-- Ngày đến hạn -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-clock"></i> Ngày đến hạn</label>
                        <p class="form-control-plaintext">@Model.DueDate</p>
                    </div>
                </div>

                <!-- Ngày trả -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-undo"></i> Ngày trả</label>
                        <p class="form-control-plaintext">
                            @(Model.ReturnDate.HasValue ? Model.ReturnDate.Value.ToString("dd/MM/yyyy") : "Chưa trả")
                        </p>
                    </div>
                </div>

                <!-- Trạng thái -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-info-circle"></i> Trạng thái</label>
                        <p class="form-control-plaintext">
                            @if (Model.Status == "Đã trả")
                            {
                                <span class="badge bg-success"><i class="fas fa-check-circle"></i> Đã trả</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark"><i class="fas fa-hourglass-half"></i> Đang mượn</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="@Url.Action("Edit", new { id = Model.BorrowTransactionId })" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
