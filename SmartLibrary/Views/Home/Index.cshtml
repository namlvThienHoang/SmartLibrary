@{
    ViewBag.Title = "Trang Chủ";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">Chào mừng đến với Hệ thống Thư viện Thông minh</h1>
    <p class="text-center">Quản lý sách, danh mục, người dùng và mượn trả sách một cách dễ dàng.</p>

    <div class="row mt-5">
        <!-- Card: Quản lý sách -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Quản lý Sách</h5>
                    <p class="card-text">Thêm mới, chỉnh sửa và theo dõi danh sách sách trong thư viện.</p>
                    <a href="@Url.Action("Index", "Book")" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card: Quản lý Danh mục -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Quản lý Danh mục</h5>
                    <p class="card-text">Quản lý danh mục sách để dễ dàng tổ chức và tìm kiếm.</p>
                    <a href="@Url.Action("Index", "Category")" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card: Quản lý Người dùng -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Quản lý Người dùng</h5>
                    <p class="card-text">Quản lý tài khoản người dùng và phân quyền.</p>
                    <a href="@Url.Action("Index", "User")" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <!-- Card: Mượn trả sách -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Mượn Trả Sách</h5>
                    <p class="card-text">Quản lý mượn trả sách dễ dàng và nhanh chóng.</p>
                    <a href="@Url.Action("Index", "Borrow")" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card: Thống kê -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Thống kê</h5>
                    <p class="card-text">Xem báo cáo và thống kê tình trạng thư viện.</p>
                    <a href="@Url.Action("Report", "Statistics")" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <!-- Card: Cài đặt hệ thống -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Cài đặt hệ thống</h5>
                    <p class="card-text">Tùy chỉnh cài đặt và cấu hình hệ thống.</p>
                    <a href="@Url.Action("Settings", "Admin")" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>
</div>
