@model SmartLibrary.Models.ViewModels.Notification.NotificationViewModel

@{
    ViewBag.Title = "Chi Tiết Thông Báo";
}

<h2 class="mb-4"><i class="fas fa-info-circle"></i> Chi Tiết Thông Báo</h2>

<div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-bell"></i> @Model.Title</h5>
    </div>
    <div class="card-body">
        <p><strong><i class="fas fa-calendar-alt"></i> Ngày Tạo:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong><i class="fas fa-tags"></i> Loại:</strong> @Model.NotificationType</p>
        <p><strong><i class="fas fa-envelope"></i> Nội Dung:</strong> @Model.Message</p>

        @if (!string.IsNullOrEmpty(Model.RedirectUrl))
        {
            <p>
                <strong><i class="fas fa-link"></i> Liên Kết:</strong>
                <a href="@Model.RedirectUrl" target="_blank">@Model.RedirectUrl</a>
            </p>
        }

        <hr />

        <div class="d-flex justify-content-between">
            <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại</a>
        </div>
    </div>
</div>


