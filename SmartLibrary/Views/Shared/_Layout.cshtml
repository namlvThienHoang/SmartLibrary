<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Trang chủ</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">Giới thiệu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Liên hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "User")">Người dùng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Book")">Sách</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Author")">Tác giả</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Category")">Loại sách</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "BorrowBook")">Mượn/Trả sách</a>
                    </li>
                </ul>
                <div class="ms-auto">
                    <!-- Đẩy phần đăng nhập ra ngoài bên phải -->
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>



    <!-- Content -->
    <div class="wrapper d-flex flex-column min-vh-100 mt-4">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    @if (ViewData["Breadcrumbs"] != null)
                    {
                        var breadcrumbs = (List<SmartLibrary.Models.ViewModels.BreadcrumbItem>)ViewData["Breadcrumbs"];
                        foreach (var breadcrumb in breadcrumbs)
                        {
                            if (breadcrumb.IsActive)
                            {
                                <li class="breadcrumb-item active" aria-current="page">@breadcrumb.Title</li>
                            }
                            else
                            {
                                <li class="breadcrumb-item"><a href="@breadcrumb.Url">@breadcrumb.Title</a></li>
                            }
                        }
                    }
                </ol>
            </nav>
        </div>
        <div class="container body-content flex-grow-1">
            <partial name="_Notification" />
            @RenderBody()
        </div>
        <footer class="text-center mt-4">
            <p>&copy; @DateTime.Now.Year - NamLV</p>
        </footer>

    </div>

    <!-- Toast Notification -->
    @Html.Partial("_Notification")


    <div id="loadingSpinner" class="position-fixed top-50 start-50 translate-middle d-none" style="z-index: 1051;">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>


    <!-- Nút cuộn về đầu trang -->
    <button id="backToTop" class="btn btn-primary" title="Go to top">
        <i class="fa-solid fa-arrow-up"></i>
    </button>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/select2")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    <script src="~/Scripts/custom.js"></script>
    <script src="~/Scripts/toast.js"></script>
    <script>
        function showSpinner() {
            document.getElementById('loadingSpinner').classList.remove('d-none');
        }

        function hideSpinner() {
            document.getElementById('loadingSpinner').classList.add('d-none');
        }

        // Thêm sự kiện AJAX để hiển thị spinner
        document.addEventListener("DOMContentLoaded", function () {
            // Khi gửi form hoặc gọi AJAX
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', () => {
                    showSpinner();
                });
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
