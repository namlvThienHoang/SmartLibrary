@if (TempData["ToastTitle"] != null && TempData["ToastMessage"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
        <div id="toastNotification" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto" id="toastTitle">Thông báo</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toastMessage">
                Nội dung thông báo!
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            showToast('@Html.Raw(HttpUtility.HtmlDecode(TempData["ToastTitle"]?.ToString()))', '@Html.Raw(HttpUtility.HtmlDecode(TempData["ToastMessage"]?.ToString()))', '@TempData["ToastType"]');
        });
    </script>
}
