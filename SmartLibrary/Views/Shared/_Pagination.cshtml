﻿@model SmartLibrary.Models.ViewModels.PaginationInfo
<div class="d-flex justify-content-between align-items-center">
    <!-- Tổng số item -->
    <div class="total-items">
        Tổng số sách: <strong>@Model.TotalItems</strong>
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination mb-0">
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action(ViewContext.RouteData.Values["action"].ToString(), new { pageNumber = Model.PageNumber - 1 })">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action(ViewContext.RouteData.Values["action"].ToString(), new { pageNumber = i })">@i</a>
                </li>
            }

            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action(ViewContext.RouteData.Values["action"].ToString(), new { pageNumber = Model.PageNumber + 1 })">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>