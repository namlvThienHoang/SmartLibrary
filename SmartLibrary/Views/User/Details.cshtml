@model SmartLibrary.Models.ViewModels.User.UserViewModel

@{
    ViewBag.Title = "Chi Tiết Người Dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0">Chi Tiết Người Dùng</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Cột trái: Avatar -->
                <div class="col-md-4 d-flex flex-column align-items-center">
                    <img src="@Model.AvatarURL" alt="Ảnh đại diện" class="img-fluid rounded shadow mb-3" style="max-width: 200px; max-height: 200px;" />
                </div>

                <!-- Cột phải: Thông tin người dùng -->
                <div class="col-md-8">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="w-25">Họ và tên</th>
                                <td>@Model.FullName</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Số điện thoại</th>
                                <td>@Model.PhoneNumber</td>
                            </tr>
                            <tr>
                                <th>Ngày sinh</th>
                                <td>@Model.DateOfBirth</td>
                            </tr>
                            <tr>
                                <th>Địa chỉ</th>
                                <td>@Model.Address</td>
                            </tr>
                            <tr>
                                <th>Vai trò</th>
                                <td>@Model.Role</td>
                            </tr>
                            <tr>
                                <th>Trạng thái</th>
                                <td>
                                    @if (Model.Status == "Active")
                                    {
                                        <span class="badge bg-primary">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Không hoạt động</span>
                                    }
                                </td>
                            </tr>
                           
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning"><i class="bi bi-pencil"></i> Chỉnh sửa</a>
                <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
            </div>
        </div>
    </div>
</div>
